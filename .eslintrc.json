{
  "env": {
    "jest": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error"],
    "class-methods-use-this": "off",
    "import/prefer-default-export": false,
    "object-curly-spacing": ["error", "always"]
  }
}
